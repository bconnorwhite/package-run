{
  "name": "package-run",
  "version": "1.1.2",
  "description": "Programmatically run package.json scripts. Supports yarn, npm, and pnpm.",
  "main": "./build/index.js",
  "author": "Connor White",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bconnorwhite/package-run.git"
  },
  "scripts": {
    "build": "yarn build:b && yarn build:d",
    "build:b": "babel ./src --out-dir ./build --config-file ./babel.config.json --extensions .ts --delete-dir-on-start --copy-files",
    "build:d": "yarn tsc ./src/*.ts --declaration --emitDeclarationOnly --esModuleInterop --forceConsistentCasingInFileNames --outDir ./build --removeComments --skipLibCheck --strict",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@bconnorwhite/exec": "^3.0.3",
    "@bconnorwhite/package": "^2.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/node": "^14.0.27",
    "typescript": "^3.9.7"
  }
}
